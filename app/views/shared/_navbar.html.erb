<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to(image_tag("logo.png", height: 90, crop: :fill), root_path) %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="buttons text-center mr-3">
    <% if user_signed_in? %>
      <%= link_to "My trips", trips_path , class: "btn btn-navbar focus-blank" %>
      <%= link_to "Add your spot", new_spot_path, class: "btn btn-navbar focus-blank" %>
      <%= link_to "Browse spots", spots_path , class: "btn btn-navbar focus-blank" %>
    <% end %>
    </div>
    <ul class="navbar-nav mr-auto">

      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached? %>
            <%= cl_image_tag current_user.photo.key, width: 50, height: 50, crop: :thumb, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "avatar-default.png", height: 50, crop: :thumb, class: "avatar-bordered dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end%>


          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <p class="dropdown-item bold"><strong>Hello, <%= current_user.nickname %>! </strong></p>
            <%= link_to "My account", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link btn btn-navbar p-3"  %>
        </li>
      <% end %>
   </ul>
  </div>
</div>
